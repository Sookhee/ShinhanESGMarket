<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShinhanESGMarket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Over Scroll Mode -->
        <item name="android:colorEdgeEffect">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray900</item>
    </style>

    <style name="Gray900">
        <item name="android:textColor">@color/gray900</item>
    </style>

    <style name="Gray600">
        <item name="android:textColor">@color/gray600</item>
    </style>

    <style name="Gray900.17">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Gray900.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Gray900.15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Gray900.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Gray900.13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Gray600.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Gray600.13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/gray900</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
    </style>

    <style name="CustomTab">
        <item name="tabTextAppearance">@style/Gray900.16</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabTextColor">@color/gray900</item>
    </style>
</resources>